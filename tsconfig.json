{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "allowJs": false,
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "bundler",
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "types": ["vite/client"],
        "lib": ["esnext", "dom"]
    }
}
